<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/charListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:text="AAA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF00FF00"
            android:textSize="35sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/pinyinListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/charListView"
            android:text="Pinyin Pinyin Pinyin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#CCAD47"
            tools:ignore="HardcodedText" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/defListView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9.0"
            android:text="Definition definition definition x x x x x x x x x x definition definition x x x x x definition definition"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>